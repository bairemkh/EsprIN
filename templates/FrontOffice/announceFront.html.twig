{% block form %}

    <div class="model-container" id="model-container">

        <form action="{{ path('addevent') }}" method="post">
            <div class="form  has-slimscroll">
                <div class="tabs-wrapper">
                    <div class="tabs is-boxed is-fullwidth">
                        <button type="button" class="exit" id="close">X</button>
                    </div>
                </div>


                <div class="title">Create</div>
                <div class="subtitle">Let's create a new Event..</div>
                <div class="input-container ic1">
                    <input id="field1" class="input" name="TitleEvent" type="text" placeholder=" " />
                    <div class="lab"></div>
                    <label for="field1" class="placeholder">Enter title</label>
                </div>
                <div class="input-container ic2">
                    <input id="field2" class="input" name="ContentEvent" type="text" placeholder=" " />
                    <div class="lab"></div>
                    <label for="field2" class="placeholder">Enter Content..</label>
                </div>
                <div class="input-container ic3">
                    <input id="field2" class="input" name="LocationEvent" type="text" placeholder=" " />
                    <div class="lab"></div>
                    <label for="field2" class="placeholder">Enter Event Location..</label>
                </div>
                <div class="input-container ic4">
                    <div class="lab">Start Date</div>
                    <input id="field3" class="input" name="DateDebut" type="date" placeholder=" " />
                </div>
                <div class="input-container ic5">
                    <div class="lab">End Date</div>
                    <input id="field4" class="input" name="DateFin" type="date" placeholder=" " />
                </div>
                <!-- General basic options -->
                <div id="basic-options" class="compose-options">
                    <!-- Upload action -->
                    <div class="compose-option">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-camera">
                            <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
                            <circle cx="12" cy="13" r="4"></circle></svg>
                        <!--<span>Media</span>-->
                        <input id="feed-upload-input-2" type="file" name="imgURL" accept=".png, .jpg, .jpeg" onchange="readURL(this)">
                    </div>
                </div>
                <!-- /General basic options -->

                <button type="submit" class="submit">Add Event</button>
            </div>
        </form>


    </div>

{% endblock %}

