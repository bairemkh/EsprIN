{% block title %}Commented{% endblock %}

{% block body %}
    <h1>Commented</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Content</th>
                <td>{{ commented.content }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ commented.idcomment ? commented.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ commented.state }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commented_index') }}">back to list</a>

    <a href="{{ path('app_commented_edit', {'createdat': commented.createdat}) }}">edit</a>

    {{ include('commented/_delete_form.html.twig') }}
