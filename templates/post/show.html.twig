{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idpost</th>
                <td>{{ post.idpost }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Mediaurl</th>
                <td>{{ post.mediaurl }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ post.createdat ? post.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ post.categorie }}</td>
            </tr>
            <tr>
                <th>Likenum</th>
                <td>{{ post.likenum }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ post.state }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">back to list</a>

    <a href="{{ path('app_post_edit', {'idpost': post.idpost}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
