{% extends 'base-back.html.twig' %}
{% block title %} AddAnnounce {% endblock %}

{% block body %}
    <div class="layer"></div>
    <main class="page-center">
        <article class="sign-up">
            <h1 class="sign-up__title">Add Announce!</h1>
            <form class="sign-up-form form" action="" method="">
                <label class="form-label-wrapper">
                    <p class="form-label">Subject</p>
                    <input class="form-input" type="text" placeholder="Enter Subject" required>
                </label>
                <label class="form-label-wrapper">
                    <p class="form-label">Content</p>
                    <input class="form-input-content" type="text" placeholder="content!.." required>
                </label>
                <label class="form-label-wrapper">
                    <p class="form-label">Destination</p>
                    <input class="form-input" type="text" placeholder="Enter Destination" required>
                </label>
                <label class="form-label-wrapper">
                    <p class="form-label">Category</p>
                    <select class="form-select" name="Category">
                        <option value ="selectCategory">Category</option>
                        <option value ="category1">Categ1</option>
                        <option value ="category2">Categ2</option>
                        <option value ="category3">Categ3</option>
                    </select>
                </label>

                <button class="form-btn primary-default-btn transparent-btn">Add </button>
            </form>
        </article>
    </main>

{% endblock %}