{% extends 'base-back.html.twig' %}
{% block title %} AddAnnounce {% endblock %}

{% block body %}
    <div class="layer"></div>
    <main class="page-center">
        <article class="sign-up">
            <h1 class="sign-up__title">Add Announce!</h1>
            <form class="sign-up-form form" action="{{ path('add_new_annoncement') }}" method="post">
                <label class="form-label-wrapper">
                    <p class="form-label">Subject</p>
                    <input class="form-input" type="text" placeholder="Enter Subject" required name="subject" id="subjectF">
                    <div class="msg">
                        </i>
                        <small class="errorMsg">error message</small>
                    </div>
                </label>
                <label class="form-label-wrapper">
                    <p class="form-label">Content</p>
                    <input class="form-input-content" type="text" placeholder="content!.." required name="content" id="contentF">
                    <div class="msg">
                        </i>
                        <small class="errorMsg">error message</small>
                    </div>
                </label>
                <label class="form-label-wrapper">
                    <p class="form-label">Destination</p>
                    <input class="form-input" type="text" placeholder="Enter Destination" required name="destination" id="destinationF">
                    <div class="msg">
                        </i>
                        <small class="errorMsg">error message</small>
                    </div>
                </label>
                <label class="form-label-wrapper">
                    <p class="form-label">Category</p>

                    <select class="form-select" name="Category" id="CategoryF">
                        <option value ="selectCategory" selected>Select a Category</option>
                        {%for cat in cat%}
                            <option>{{cat.libcatann}}</option>
                        {%endfor%}

                    </select>
                    <div class="msg">
                        </i>
                        <small class="errorMsg">error message</small>
                    </div>
                </label>

                <button class="form-btn primary-default-btn transparent-btn" id="submitBtn">Add </button>
            </form>
        </article>
    </main>
    <link rel="stylesheet" href="{{ asset('FrontOffice/css/formsStyle.css') }}">
    <script src="{{ asset('FrontOffice/js/addAnnounceVerification.js') }}"></script>
{% endblock %}